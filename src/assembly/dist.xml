<?xml version="1.0" encoding="utf-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
	  http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>dist</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <excludes>
        <exclude>xerces:xercesImpl</exclude>
        <exclude>xml-resolver:*</exclude>
        <exclude>org.opengis.cite.teamengine:*</exclude>
        <exclude>org.opengis.cite.saxon:*</exclude>
        <exclude>com.sun.jersey:jersey-core</exclude>
        <exclude>com.thaiopensource:*</exclude>
      </excludes>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <useTransitiveFiltering>true</useTransitiveFiltering>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.build.scriptSourceDirectory}/shell/mswin</directory>
      <outputDirectory>bin/windows</outputDirectory>
      <includes>
        <include>*.bat</include>
      </includes>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>${project.build.scriptSourceDirectory}/shell/unix</directory>
      <outputDirectory>bin/unix</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.basedir}/src/main/config/ets-releases.csv</source>
      <lineEnding>unix</lineEnding>
    </file>
  </files>
</assembly>
